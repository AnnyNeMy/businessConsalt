

@{
    Layout = null;
}
<!DOCTYPE html>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Сообщение отправлено </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Спасибо, что обратились к нам, @ViewBag.Name. </p>
                <p>  Наш специалист ответит Вам в ближайшее время. </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script>

    //alert("Спасибо, что обратились к нам, @ViewBag.Name. Наш специалист ответит Вам в ближайшее время"); 
   
    function modalShow() {
        $('#exampleModal').modal('show')
        setTimeout(function () {
            $('#exampleModal').modal('hide')
        }, 4000);
    }
    modalShow();
    


</script>


